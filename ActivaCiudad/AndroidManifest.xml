<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codear.activaciudad"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >

        <!-- android:theme="@style/AppTheme" > -->
        <activity
            android:name="com.codear.activaciudad.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codear.activaciudad.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.codear.activaciudad.LevantamientoActivity"
            android:label="@string/title_activity_levantamiento" >
        </activity>
        <activity
            android:name="com.codear.activaciudad.TipoLevantamientoActivity"
            android:label="@string/title_activity_tipo_levantamiento" >
        </activity>
        <activity
            android:name="com.codear.activaciudad.FormularioPisoActivity"
            android:label="@string/title_activity_formulario_piso" >
        </activity>
        <activity
            android:name="com.codear.activaciudad.TipoLevantamientoLibre"
            android:label="@string/title_activity_tipo_levantamiento_libre" >
        </activity>
    </application>

</manifest>
